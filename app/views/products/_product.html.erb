<div id="<%= dom_id product %>" class="mb-4">
  <p class="my-3">
    <strong class="fw-bold mb-1">Title:</strong>
    <%= product.title %>
  </p>

  <p class="my-3">
    <strong class="fw-bold mb-1">Description:</strong>
    <%= product.description %>
  </p>

  <p class="my-3">
    <strong class="fw-bold mb-1">Image URL:</strong>
    <%= product.image_url %>
  </p>

  <p class="my-3">
    <strong class="fw-bold mb-1">Price:</strong>
    <%= product.price %>
  </p>
</div>
