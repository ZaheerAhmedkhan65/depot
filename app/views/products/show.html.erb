<div class="container my-4">
  <div class="">
    <% if notice.present? %>
      <p class="alert alert-success" id="notice"><%= notice %></p>
    <% end %>

    <h1 class="mb-3 text-center display-4">Show Product</h1>

    <%= render @product %>

    <div class="mt-3">
      <%= link_to "Edit this product", edit_product_path(@product), class: "btn btn-primary me-2" %>
      <%= link_to "Back to products", products_path, class: "btn bg-secondary-subtle" %>
    </div>
  </div>
</div>
