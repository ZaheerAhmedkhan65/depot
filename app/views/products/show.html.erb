<div class="container my-4">
  <div class="">
    <% if notice.present? %>
      <p class="alert alert-success" id="notice"><%= notice %></p>
    <% end %>

    <%= render @product %>

    <div class="mt-3">
      <%= link_to "Edit this product", edit_product_path(@product), class: "btn btn-warning me-2" %>
      <%= link_to "Back to products", products_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
