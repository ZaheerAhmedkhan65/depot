<div class="w-100">
  <% if notice.present? %>
    <p class="p-2 mb-5 bg-success text-white rounded-lg" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <h1 class="fw-bold fs-4 mb-6 pb-2 border-bottom">
    Your Pragmatic Catalog
  </h1>

  <ul class="list-unstyled">
    <% cache @products do %>
      <% @products.each do |product| %>
        <% cache product do %>
          <li class="d-flex mb-6">
            <%= image_tag(product.image_url, class: 'img-fluid shadow me-3', style: 'width: 150px; height: 200px; object-fit: contain;') %>
            <div>
              <h2 class="fw-bold fs-5 mb-3"><%= product.title %></h2>
              <p>
                <%= sanitize(product.description) %>
              </p>
              <div class="mt-3">
                <%= number_to_currency(product.price) %>
              </div>
            </div>
          </li>
        <% end %>
      <% end %>
    <% end %>
  </ul>
</div>
